@model  Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="container">
            <div class="card card-primary card-outline">
                <div class="card-body">

                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsHome" />
                        <label asp-for="IsHome" class="form-check-label"></label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsApproved" />
                        <label asp-for="IsApproved" class="form-check-label"></label>
                    </div>

                    <div class="card-text form-group">
                        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.ListCategory">
                            <option disabled selected>Select Category</option>
                        </select>
                    </div>

                    <div class="card-text form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                    </div>

                    <div class="card-text form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>

                    <div class="card-text form-group">
                        <label asp-for="Content"></label>
                        <input asp-for="Content" class="form-control" />
                    </div>

                    <div class="card-text form-group">
                        <label asp-for="Image"></label>
                        <input type="file" name="file" id="file" class="form-control" />
                    </div>

                    <div class="card-text form-group">
                        <label asp-for="Date"></label>
                        <input asp-for="Date" class="form-control" />
                    </div>

                    <input type="submit" value="Add" class="btn btn-success text-right" />
                </div>
            </div>
        </div>
    </form>
